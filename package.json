{
  "name": "vscode-fs",
  "type": "module",
  "version": "0.1.0",
  "description": "VSCode like simple„ÄÅserializable and cross-platform file system utilities.",
  "author": "Naily Zero <zero@naily.cc> (https://naily.cc)",
  "license": "MIT",
  "homepage": "https://github.com/groupguanfang/vscode-fs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groupguanfang/vscode-fs.git"
  },
  "bugs": {
    "url": "https://github.com/groupguanfang/vscode-fs/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "vscode",
    "file system",
    "serializable",
    "cross-platform"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./vscode": {
      "types": {
        "import": "./dist/vscode.d.mts",
        "require": "./dist/vscode.d.cts"
      },
      "import": "./dist/vscode.mjs",
      "require": "./dist/vscode.cjs"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=17.0.0"
  },
  "scripts": {
    "build": "tsdown --dts --format esm,cjs src/index.ts src/vscode.ts --deps.neverBundle vscode",
    "test": "vitest --coverage --ui",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "vscode-uri": "^3.1.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "tinyglobby": "^0.2.15",
    "trash": "^10.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.109.0",
    "naily-eslint-config": "^0.0.1",
    "tsdown": "0.21.0-beta.2"
  }
}
